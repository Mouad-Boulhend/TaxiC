<?xml version="1.0" encoding="utf-8"?>
<!--
    SLIDE IN FROM LEFT

    Used when: Opening profile fragment
    Effect: Profile slides in from left side of screen

    File location: res/anim/slide_in_left.xml
-->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="200">

    <!--
        Translate (move) the view:
        - fromXDelta="-100%p" means start at 100% to the LEFT (off screen)
        - toXDelta="0" means end at normal position (0)

        So it slides from left edge to center
    -->
    <translate
        android:fromXDelta="100%p"
        android:toXDelta="0"
        android:interpolator="@android:anim/decelerate_interpolator" />

    <!--
        Fade in while sliding:
        - fromAlpha="0.0" means fully transparent
        - toAlpha="1.0" means fully visible
    -->
    <alpha
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />

</set>