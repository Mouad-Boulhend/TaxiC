<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Map Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.TaxiMeterFragment" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Taxi Meter Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/infoCard"
            app:layout_constraintWidth_percent="0.27"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/darkest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp">

                <!-- Fare -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="ðŸ’° Tarif"-->
                    <!--                        android:textSize="12sp"-->
                    <!--                        android:textColor="#343A40"-->
                    <!--                        android:layout_marginBottom="4dp" />-->

                    <TextView
                        android:id="@+id/tvFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="#FFD700"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="2"
                        android:text="2.50 DH"
                        android:textColor="@color/taxi_yellow"
                        android:textSize="36sp" />
                </LinearLayout>

                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:weightSum="2">

                    <!-- Distance -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!--                        <TextView-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:text="ðŸ“ Distance"-->
                        <!--                            android:textSize="12sp"-->
                        <!--                            android:textColor="#343A40"-->
                        <!--                            android:layout_marginBottom="4dp" />-->

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/taxi_yellow"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="1"
                            android:text="0.00 km"
                            android:textColor="@color/taxi_yellow"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Time -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!--                        <TextView-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:text="â±ï¸ Temps"-->
                        <!--                            android:textSize="12sp"-->
                        <!--                            android:textColor="#343A40"-->
                        <!--                            android:layout_marginBottom="4dp" />-->

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/taxi_yellow"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="1"
                            android:text="00:00"
                            android:textColor="@color/taxi_yellow"
                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Start/Stop Button -->
        <Button
            android:id="@+id/btnStartStop"
            app:layout_constraintWidth_percent="0.27"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/start_the_ride"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:backgroundTint="@color/taxi_yellow"
            app:cornerRadius="25dp"
            app:layout_constraintTop_toBottomOf="@id/infoCard"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- Driver Profile Button -->
        <ImageView
            android:alpha="0.7"
            android:id="@+id/btnProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="12dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/user"
            android:background="@drawable/circle"
            android:backgroundTint="@color/taxi_yellow"
            android:layout_gravity="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>